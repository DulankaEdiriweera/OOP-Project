<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
 		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  		 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
   		 version="3.1">

		<servlet>
			<servlet-name> UserInsert </servlet-name>
			<servlet-class> com.User.UserInsert </servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name> UserInsert </servlet-name>
			<url-pattern>/insert</url-pattern>
		</servlet-mapping>
		
		<servlet>
			<servlet-name> HospitalAppointmentServlet </servlet-name>
			<servlet-class> com.HospitalAppointments.HospitalAppointmentServlet</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name> HospitalAppointmentServlet </servlet-name>
			<url-pattern>/searchAppointment</url-pattern>
		</servlet-mapping>
		
		
		<servlet>
			<servlet-name> AppointmentInsert </servlet-name>
			<servlet-class> com.HospitalAppointments.AppointmentInsert </servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name> AppointmentInsert </servlet-name>
			<url-pattern>/insertAppointment</url-pattern>
		</servlet-mapping>
		
		
		<servlet>
			<servlet-name>AppointmentUpdateServlet</servlet-name>
			<servlet-class>com.HospitalAppointments.AppointmentUpdateServlet</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name> AppointmentUpdateServlet </servlet-name>
			<url-pattern>/updateAppointment</url-pattern>
		</servlet-mapping>
		
		
		<servlet>
			<servlet-name>AppointmentDeleteServlet</servlet-name>
			<servlet-class>com.HospitalAppointments.AppointmentDeleteServlet</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name> AppointmentDeleteServlet </servlet-name>
			<url-pattern>/deleteAppointment</url-pattern>
		</servlet-mapping>
		
		
		
</web-app>